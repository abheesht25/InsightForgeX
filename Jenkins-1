pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package' // Or your build command
            }
        }
        stage('Scans') {
            steps {
                script {
                    withSonarQubeEnv(installation: 'sq1') {
                        bash 'sonar-scanner'
                    }
                }
            }
        }
    }
}
